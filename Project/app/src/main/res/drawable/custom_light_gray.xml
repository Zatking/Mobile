<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- Mã màu đen tối trong suốt -->
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" /> <!-- Bo tròn 2 góc trên -->
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#EDEDED" /> <!-- Mã màu xám nhạt -->
            <corners android:topLeftRadius="18dp" android:topRightRadius="18dp" /> <!-- Bo tròn 2 góc trên nhỏ hơn -->
        </shape>
    </item>
</layer-list>