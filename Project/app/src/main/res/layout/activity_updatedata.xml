<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="QUẢN LÝ CHUYẾN BAY"
                android:textSize="35dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout">

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:text="Mã chuyến bay"
                            android:textSize="21dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtUpdateCode"
                            android:layout_width="100dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/inputlayout"
                            android:paddingLeft="15dp"
                            android:textStyle="bold" />
                    </TableRow>
                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:text="Mã Máy Bay"
                            android:textSize="21dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtUpdateNamePlane"
                            android:layout_width="100dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/inputlayout"
                            android:paddingLeft="15dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:text="Sân bay đi"
                            android:textSize="21dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtUpdateDepartPlace"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/inputlayout"
                            android:paddingLeft="15dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:text="Sân bay đến"
                            android:textSize="21dp"
                            android:textStyle="bold" />

                        <EditText

                            android:id="@+id/edtUpdateArrivalPlace"
                            android:layout_width="190dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/inputlayout"
                            android:paddingLeft="15dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:layout_margin="10dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:text="Ngày giờ"

                            android:textSize="21dp"
                            android:textStyle="bold" />
                        <HorizontalScrollView
                            android:id="@+id/horizontalScrollView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <LinearLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edtUpdate_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="10/01/2004"/>
                                <EditText
                                    android:id="@+id/edtUpdate_Time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="10:30 AM"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </TableRow>





                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="25dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:text="Tình trạng chuyến bay"
                            android:textSize="21dp"

                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtUpdateState"
                            android:layout_width="190dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/inputlayout"
                            android:paddingLeft="15dp"
                            android:textStyle="bold" />
                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="25dp">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:text="Giá vé chuyến bay"
                            android:textSize="21dp"

                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtUpdatePrice"
                            android:layout_width="190dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/inputlayout"
                            android:paddingLeft="15dp"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="#0EDA16"
                    android:text="Update"
                    />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>