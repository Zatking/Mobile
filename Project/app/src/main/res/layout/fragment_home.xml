<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/light_blue"
                        android:gravity="top"
                        android:elevation="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:id="@+id/cardview"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">

                                <EditText
                                    android:id="@+id/searchEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Tìm kiếm mặt hàng,điểm đến..."
                                    android:imeOptions="actionSearch"
                                    android:paddingLeft="10dp"
                                    android:drawableLeft="@drawable/baseline_search_24"
                                    android:inputType="text"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:background="@color/white"/>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right"
                            android:layout_marginRight="0dp">

                            <ImageButton
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:background="@drawable/baseline_notifications_none_24"
                                android:layout_marginRight="10dp"
                                />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/baseline_message_24"
                                android:layout_marginRight="10dp"
                                />
                        </LinearLayout>
                    </androidx.appcompat.widget.Toolbar>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logoairplane" />

                    <TextView
                        android:id="@+id/captionTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tìm chuyến bay"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logoairplane" />

                    <TextView
                        android:id="@+id/captionTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tìm khách sạn"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logoairplane" />

                    <TextView
                        android:id="@+id/captionTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xperience"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_light_gray"
                android:elevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="OggyAirlines"
                    android:drawableLeft="@drawable/logoapp"
                    android:textSize="22sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/light_blue"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chào mừng bạn đến với OggyAirlines"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:flipInterval="2000"
                android:autoStart="true"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageview2"
                    android:background="@drawable/img_2"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageview3"
                    android:background="@drawable/img_3"/>


            </ViewFlipper>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn có thể thích chuyến bay này"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_place"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageBanner1"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/img_1" />

                        <TextView
                            android:id="@+id/captionplace1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TP HCM - Hà Nội"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/placetime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19 - 21 tháng 3 2024"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/placeprice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="VND 2.862.255"
                            android:textColor="@color/dark_yellow" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_place"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageBanner2"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/img_2" />

                        <TextView
                            android:id="@+id/captionplace2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TP HCM - Đà Lạt"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/placetime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 - 27 tháng 3 2024"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/placeprice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="VND 2.146.959"
                            android:textColor="@color/dark_yellow" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_place"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageBanner3"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/img_3" />

                        <TextView
                            android:id="@+id/captionplace3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hà Nội - TP HCM"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/placetime3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 tháng 4 2024"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/placeprice3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="VND 1.316.340"
                            android:textColor="@color/dark_yellow" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>